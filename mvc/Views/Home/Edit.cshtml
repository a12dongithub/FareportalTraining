@model patientmgmt.Models.PatientsTable

<h2>Edit Patient</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Pid" />
    <div class="form-group">
        <label asp-for="Pname" class="control-label"></label>
        <input asp-for="Pname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pstatus" class="control-label"></label>
        <input asp-for="Pstatus" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
